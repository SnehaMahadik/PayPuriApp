<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cv"

        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp">
        <RelativeLayout
            android:id="@+id/rlRowOrderList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">
            <LinearLayout
                android:padding="10dp"
                android:id="@+id/rlivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:id="@+id/imageViewContactPic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"

                    />

            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/ll1"
                android:layout_toRightOf="@+id/rlivLogo"
                android:paddingLeft="10dp"
                >
                <!--<include
                    android:id="@+id/view"
                    layout="@layout/view"
                    />-->
                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/textViewContactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_total_amount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeMedium"/>


                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/textViewMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Rs"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:id="@+id/imageViewStatus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/status_online"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View

        android:background="@android:color/darker_gray"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:padding="5dp"/>
</LinearLayout>